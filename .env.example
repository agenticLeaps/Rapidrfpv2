# NodeRAG Service Configuration

# Database Configuration
NEON_DATABASE_URL=postgresql://username:password@host/database

# LLM Provider Configuration
LLM_PROVIDER=gemini

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
# Alternative: GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_PROJECT_ID=your_google_cloud_project_id
GEMINI_LOCATION=global

# LlamaParse Configuration (Optional)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here
USE_LLAMAPARSE=true

# HuggingFace Embedding Configuration
QWEN_EMBEDDING_ENDPOINT=mahendraVarmaGokaraju/qwen3-embeddings

# Document Processing Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Graph Settings
MAX_ENTITIES_PER_CHUNK=20
MAX_RELATIONSHIPS_PER_CHUNK=15
IMPORTANT_ENTITY_PERCENTAGE=0.2

# Community Detection Settings
LEIDEN_RESOLUTION=1.0
LEIDEN_RANDOM_STATE=42

# LLM Generation Settings
DEFAULT_MAX_LENGTH=1024
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9

# Batch Processing
DEFAULT_BATCH_SIZE=16

# Storage Paths
DATA_DIR=data
GRAPH_DB_PATH=data/processed/graph.gpickle
INDEX_PATH=data/processed/embeddings
HNSW_INDEX_PATH=data/processed/hnsw_index

# HNSW Settings
HNSW_DIMENSION=1536
HNSW_MAX_ELEMENTS=100000
HNSW_EF_CONSTRUCTION=200
HNSW_M=50
HNSW_SPACE=cosine

# Search Settings
DEFAULT_SEARCH_K=10
PPR_ALPHA=0.85
PPR_MAX_ITERATIONS=100
SIMILARITY_WEIGHT=1.0
ACCURACY_WEIGHT=1.0

# Logging
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=false