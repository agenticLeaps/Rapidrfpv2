# Render-specific environment variables
# Copy these to your Render environment variables section

# Environment Detection
IS_RENDER=true
IS_CLOUD=true

# Adaptive Batch Processing for Render
DEFAULT_BATCH_SIZE=16
RENDER_BATCH_SIZE=6
CLOUD_BATCH_SIZE=8

# Rate Limiting & Delays (more conservative for Render)
BASE_DELAY=0.1
RENDER_BASE_DELAY=1.0
MAX_DELAY=5.0

# Memory Management (more aggressive for Render)
GC_EVERY_N_BATCHES=5
MEMORY_CHECK_INTERVAL=3

# Retry Configuration (more retries for unstable connections)
MAX_RETRIES=5
RETRY_DELAY_BASE=2.0

# Checkpoint Configuration (frequent saves for Render)
ENABLE_CHECKPOINTS=true
CHECKPOINT_INTERVAL=10

# Logging (reduced for performance)
LOG_LEVEL=WARNING

# Your API keys (set these in Render's environment variables)
# OPENAI_API_KEY=your_openai_key_here
# LLAMA_CLOUD_API_KEY=your_llama_key_here
# NEO4J_PASSWORD=your_neo4j_password_here